<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorIrises"
    tools:context="com.sahilda.nytimessearch.fragments.FiltersFragment">

    <TextView
        android:id="@+id/tvBeginDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:padding="5dp"
        android:text="Begin Date"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBeginDate"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorSunflowers"
        android:text="03/23/2017"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/tvSortOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDate"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:padding="5dp"
        android:text="Sort Order"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <Spinner
        android:id="@+id/spOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSortOrder"
        android:layout_centerHorizontal="true"
        android:entries="@array/sort_array"/>

    <TextView
        android:id="@+id/tvNewsDeskValues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spOrder"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:padding="5dp"
        android:text="News Desk Values"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:layout_below="@id/tvNewsDeskValues"
        android:id="@+id/linearLayout">

        <CheckBox
            android:theme="@style/checkBoxStyle"
            android:id="@+id/cbArts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSunflowers"
            android:padding="1dp"
            android:text="Arts"
            android:textAppearance="@android:style/TextAppearance.Material.Large" />

        <CheckBox
            android:theme="@style/checkBoxStyle"
            android:id="@+id/cbFashionAndStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSunflowers"
            android:padding="1dp"
            android:text="Fashion and Style  "
            android:textAppearance="@android:style/TextAppearance.Material.Large" />

        <CheckBox
            android:theme="@style/checkBoxStyle"
            android:id="@+id/cbSports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSunflowers"
            android:padding="1dp"
            android:text="Sports"
            android:textAppearance="@android:style/TextAppearance.Material.Large" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:background="@color/colorWhite"
        android:textColor="@color/colorEvening"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:text="Save" />

</RelativeLayout>
