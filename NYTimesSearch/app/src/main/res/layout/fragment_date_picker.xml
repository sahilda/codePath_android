<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sahilda.nytimessearch.fragments.DatePickerFragment">

    <DatePicker
        android:id="@+id/dpBeginDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:headerBackground="@color/colorIrises" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dpBeginDate"
        android:background="@color/colorSunflowers"
        android:textColor="@color/colorEvening"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:text="Cancel" />

</RelativeLayout>
